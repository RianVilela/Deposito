modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node index.js"]

[workflows]
runButton = "NPM Dev"

[[workflows.workflow]]
name = "Desenvolvimento"
author = 24367174
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sistema-empresarial && npx vite --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Dev Script"
author = 24367174
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sistema-empresarial && npm run dev -- --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Vite Direto"
author = 24367174
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd sistema-empresarial && node node_modules/vite/bin/vite.js --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "NPM Dev"
author = 24367174
mode = "sequential"

